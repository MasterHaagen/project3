<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nttu.csie.project3.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/dark"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="300dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:stretchColumns="*"
        android:paddingTop="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_height="match_parent">

            <Button
                android:text="步數"
                android:drawableTop="@drawable/ic_btn2"
                android:onClick="onClick_Btn1"
                android:id="@+id/btn1"
                android:textSize="16dp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <Button
                android:text="卡路里"
                android:layout_width="match_parent"
                android:drawableTop="@drawable/ic_btn1"
                android:onClick="onClick_Btn2"
                android:id="@+id/btn2"
                android:backgroundTint="@color/chart_color_KR"
                android:textSize="16dp"
                android:layout_height="match_parent" />

            <Button
                android:text="位置"
                android:layout_width="match_parent"
                android:drawableTop="@drawable/ic_btn3"
                android:onClick="onClick_Btn3"
                android:layout_height="match_parent"
                android:id="@+id/btn3"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textSize="16dp" />

            <Button
                android:text="跌倒記錄"
                android:layout_width="match_parent"
                android:drawableTop="@drawable/ic_btn4"
                android:onClick="onClick_Btn4"
                android:layout_height="match_parent"
                android:id="@+id/btn4"
                android:backgroundTint="?attr/colorAccent"
                android:textSize="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1">

            <Button
                android:text="PPAP"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="16dp"
                android:id="@+id/btn5"
                android:onClick="onClick_Btn5"
                android:backgroundTint="@android:color/holo_blue_bright"
                android:visibility="visible"/>

            <Button
                android:text="開發中"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:id="@+id/btn6"
                android:onClick="onClick_Btn6"
                android:backgroundTint="@color/chart_color_JP"
                android:visibility="invisible" />

            <Button
                android:text="開發中"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:id="@+id/btn7"
                android:onClick="onClick_Btn7"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:visibility="invisible" />

            <Button
                android:text="開發中"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:id="@+id/btn8"
                android:onClick="onClick_Btn8"
                android:backgroundTint="@android:color/holo_purple"
                android:visibility="invisible" />
        </TableRow>

    </TableLayout>


</LinearLayout>
